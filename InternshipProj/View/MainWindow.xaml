<Window x:Class="InternshipProj.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:InternshipProj.View"
        xmlns:local="clr-namespace:InternshipProj"
        mc:Ignorable="d"
        Title="To Do Boi" MinWidth="600" MinHeight="600"
        WindowState="Maximized"
        Closed="Window_Closed">
    <Grid x:Name="Tab" xmlns:local="clr-namespace:InternshipProj.View" Background="WhiteSmoke">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
      <view:ToDoTabControl
         x:Name="TabControl"
         HorizontalAlignment="Stretch"
         VerticalAlignment="Stretch"/>
    </Grid>
</Window>
